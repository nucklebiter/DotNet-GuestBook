@model MyPortfolio.Models.ViewModels.GuestBookVM
@using static MyPortfolio.Models.ApplicationUser

<form method="post" asp-action="Upsert">
    <input type="hidden" asp-for="GuestBook.Id" />
    
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Guest Entry</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GuestBook.Id" />
            <div class="form-group">
                <label asp-for="GuestBook.GuestBookFirstName" class="control-label">First Name</label>
                <input asp-for="GuestBook.GuestBookFirstName" class="form-control" />
                <span asp-validation-for="GuestBook.GuestBookFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestBook.GuestBookLastName" class="control-label">Last Name</label>
                <input asp-for="GuestBook.GuestBookLastName" class="form-control" />
                <span asp-validation-for="GuestBook.GuestBookLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestBook.GuestBookEmail" class="control-label">Email</label>
                <input asp-for="GuestBook.GuestBookEmail" class="form-control" />
                <span asp-validation-for="GuestBook.GuestBookEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestBook.GuestTypeId" class="control-label">Who are you?</label>
                <select asp-for="GuestBook.GuestTypeId" asp-items="@Model.GuestTypeList" class="form-select">
                    <option disabled selected>--Select Option--</option>
                </select>
                <span asp-validation-for="GuestBook.GuestTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestBook.AlienTypeId" class="control-label">Do you believe?</label>
                <select asp-for="GuestBook.AlienTypeId" asp-items="@Model.AlienTypeList" class="form-select">
                    <option disabled selected>--Select Option--</option>
                </select>
                <span asp-validation-for="GuestBook.AlienTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestBook.GuestBookDescription" class="control-label"></label>
                <textarea asp-for="GuestBook.GuestBookDescription" class="form-control">Message</textarea>
                <span asp-validation-for="GuestBook.GuestBookDescription" class="text-danger"></span>
            </div>

            <br />
            <div class="row">
                <div class="col-6 form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="col-6 text-end">
                @if (Model.GuestBook.Id != 0)
                {
                    //<a asp-controller="GuestBooks" asp-action="Delete" class="btn btn-danger">Delete</a>
                    <form method="post" asp-action="Delete">
                    
                        <a asp-action="Delete" asp-route-id="@Model.GuestBook.Id" class="btn btn-danger">Delete</a>
                        
                    
                    </form>
                }
                </div>
            </div>
    </div>
</form>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/guestBookHome.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
