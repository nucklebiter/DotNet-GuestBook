@page
@using MyPortfolio.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-7">
        <form id="registerForm"asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="py-2 col-12">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="py-2 col-6">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="py-2 col-6">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="py-2 col-6">
                    <label asp-for="Input.UserFirstName">First Name</label>
                    <input asp-for="Input.UserFirstName" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.UserFirstName" class="text-danger"></span>
                </div>
                <div class="py-2 col-6">
                    <label asp-for="Input.UserLastName">Last Name</label>
                    <input asp-for="Input.UserLastName" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.UserLastName" class="text-danger"></span>
                </div>
                <div class="py-2 col-6">
                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="py-2 col-12">
                    <label asp-for="Input.UserStreetAddress">Street Address</label>
                    <input asp-for="Input.UserStreetAddress" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.UserStreetAddress" class="text-danger"></span>
                </div>
                <div class="py-2 col-6">
                    <label asp-for="Input.UserCity">City</label>
                    <input asp-for="Input.UserCity" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.UserCity" class="text-danger"></span>
                </div>
                <div class="py-2 col-6">
                    <label asp-for="Input.UserState">State</label>
                    <input asp-for="Input.UserState" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.UserState" class="text-danger"></span>
                </div>
                <div class="py-2 col-6">
                    <label asp-for="Input.UserPostalCode">Postal Code</label>
                    <input asp-for="Input.UserPostalCode" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.UserPostalCode" class="text-danger"></span>
                </div>
            </div>
            @if (User.IsInRole(SD.Role_Admin))
            {
            <div class="py-2 col-12">
                    <select class="form-select" asp-for="Input.Role" asp-items="@Model.Input.RoleList">
                        <option disabled selected>-Select Role-</option>
                    </select>
            </div>
            }
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Register</button>
        </form>
    </div>
